<core:FragmentDefinition
xmlns:core="sap.ui.core"
xmlns="sap.m">
  <ResponsivePopover title="Column Options" 
  showHeader="false"
  placement= "Bottom"
  afterOpen= "onOpenColOptions">
        <OverflowToolbar class="colOptionsMargin noBottomBorder">
            <Button id="colSortAscButton"
                icon="sap-icon://sort-ascending"
                press=".onColumnSortAscending"
                visible="true"/>
            <Button id="colSortDescButton"
                icon="sap-icon://sort-descending"
                press=".onColumnSortDescending"
                visible="true"/>
            <Input id="colFilter" width="150px" placeholder="Enter filter value" change=".onColumnFilter" />
        </OverflowToolbar>
  </ResponsivePopover>
</core:FragmentDefinition>