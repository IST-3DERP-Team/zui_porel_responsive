<mvc:View controllerName="zuiporel.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:uiL="sap.ui.layout"
    xmlns:uiT="sap.ui.table"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:sfb="sap.ui.comp.smartfilterbar"
    xmlns:core="sap.ui.core"
    height="100%">

    <Page id="page" enableScrolling="false" class="sapUiNoContentPadding" showHeader="false">
        <dependents>
            <core:CommandExecution id="CE_REFRESH" command="Refresh" enabled="true" execute=".onRefresh" />
        </dependents>
        <content>

            <VBox id="vbPORel" fitContainer="true">
                <sfb:SmartFilterBar id="sfbPORel" entitySet="ZVB_3DERP_PORELFILTER" enableBasicSearch="true" search="onSearch"
                    persistencyKey="3DERP_PORelKey" filterContainerWidth="14rem" useToolbar="true" showClearOnFB="true" initialise="onSFBInitialise">
                    <!-- <sfb:controlConfiguration>
                        <sfb:ControlConfiguration id="filterRelGrp" key="RELGRP" groupId="_BASIC" label="{ddtext>/RELGRP}" controlType="dropDownList" filterType="single"
                            displayBehaviour="idAndDescription" mandatory="notMandatory" index="0">
                        </sfb:ControlConfiguration>
                    </sfb:controlConfiguration> -->
                    <sfb:controlConfiguration>
                        <sfb:ControlConfiguration id="filterRelGrp" key="RELGRP" groupId="_BASIC" label="{ddtext>/RELGRP}" index="0">
                            <sfb:customControl>
                                <ComboBox
                                    id="cmbRelGrp"
                                    showSecondaryValues= "false"
                                    width="15rem"
                                    items="{
                                        path: 'relGrp>/results',
                                        sorter: { path: 'RELGRP' }
                                    }"
                                    selectionChange="onSelectionChangeRelGrp"
                                    >
                                    <core:ListItem id="liRelGrp" key="{relGrp>RELGRP}" text="{relGrp>RELGRP} ({relGrp>DESCRIPTION})" additionalText="{relGrp>DESCRIPTION}"/>
                                </ComboBox>
                            </sfb:customControl>
                        </sfb:ControlConfiguration>
                    </sfb:controlConfiguration>
                    <!-- <sfb:controlConfiguration>
                        <sfb:ControlConfiguration id="filterRelCd" key="RELCD" groupId="_BASIC" label="{ddtext>/RELCD}" preventInitialDataFetchInValueHelpDialog="false"
                            displayBehaviour="idAndDescription" mandatory="notMandatory" index="1">
                        </sfb:ControlConfiguration>
                    </sfb:controlConfiguration> -->
                    <sfb:controlConfiguration>
                        <sfb:ControlConfiguration id="filterRelCd" key="RELCD" groupId="_BASIC" label="{ddtext>/RELCD}" index="1">
                            <sfb:customControl>
                                <ComboBox
                                    id="cmbRelCd"
                                    showSecondaryValues= "false"
                                    width="15rem"
                                    items="{
                                        path: 'relCd>/results',
                                        sorter: { path: 'RELCD' }
                                    }"
                                    selectionChange="onSelectionChangeRelCd"
                                    placeholder="Release Group is required"
                                    >
                                    <core:ListItem id="liRelCd" key="{relCd>RELCD}" text="{relCd>RELCD} ({relCd>DESCRIPTION})" additionalText="{relCd>DESCRIPTION}"/>
                                </ComboBox>
                            </sfb:customControl>
                        </sfb:ControlConfiguration>
                    </sfb:controlConfiguration>
                    <sfb:controlConfiguration>
                        <sfb:ControlConfiguration id="filterDocType" key="DOCTYPE" groupId="_BASIC" label="{ddtext>/DOCTYPE}" controlType="dropDownList"
                            displayBehaviour="idOnly" mandatory="notMandatory" index="2">
                        </sfb:ControlConfiguration>
                    </sfb:controlConfiguration>
                    <sfb:controlConfiguration>
                        <sfb:ControlConfiguration id="filterPurchOrg" key="PURCHORG" groupId="_BASIC" label="{ddtext>/PURCHORG}" controlType="dropDownList"
                            displayBehaviour="idAndDescription" mandatory="notMandatory" index="3">
                        </sfb:ControlConfiguration>
                    </sfb:controlConfiguration>
                    <sfb:controlConfiguration>
                        <sfb:ControlConfiguration id="filterPurchGrp" key="PURCHGRP" groupId="_BASIC" label="{ddtext>/PURCHGRP}" controlType="dropDownList"
                            displayBehaviour="idAndDescription" mandatory="notMandatory" index="4">
                        </sfb:ControlConfiguration>
                    </sfb:controlConfiguration>
                    <sfb:controlConfiguration>
                        <sfb:ControlConfiguration id="filterVendor" key="VENDOR" groupId="_BASIC" label="{ddtext>/VENDOR}" controlType="dropDownList"
                            displayBehaviour="idAndDescription" mandatory="notMandatory" index="5">
                        </sfb:ControlConfiguration>
                    </sfb:controlConfiguration>
                    <sfb:controlConfiguration>
                        <sfb:ControlConfiguration id="filterRelInd" key="RELIND" groupId="_BASIC" label="{ddtext>/RELIND}" controlType="dropDownList"
                            displayBehaviour="idAndDescription" mandatory="notMandatory" index="6">
                        </sfb:ControlConfiguration>
                    </sfb:controlConfiguration>
                    <sfb:controlConfiguration>
                        <sfb:ControlConfiguration id="filterPONo" key="PONO" groupId="_BASIC" label="{ddtext>/PONO}" controlType="dropDownList"
                            displayBehaviour="idOnly" mandatory="notMandatory" index="7">
                        </sfb:ControlConfiguration>
                    </sfb:controlConfiguration>
                    <sfb:layoutData>
                        <FlexItemData shrinkFactor="0"/>
                    </sfb:layoutData>
                </sfb:SmartFilterBar>

                <VBox id="vbMain" height="70%">
                    <OverflowToolbar>
                        <content>
                            <Text text="{ui>/rowCount} {ddtext>/ROWS}" />
                            <ToolbarSpacer/>
                            <Button id="btnReleaseSave"
                                text="{ddtext>/RELSAVE}"
                                press="onRelease('RELEASE')"
                                visible="true"/>
                            <Button id="btnCancelReleaseSave"
                                text="{ddtext>/CRELSAVE}"
                                press="onRelease('CANCEL')"
                                visible="true"/>
                            <Button id="btnRejectSave"
                                text="{ddtext>/REJSAVE}"
                                press="onRelease('REJECT')"
                                visible="true" />
                            <Button id="btnPrintPreview"
                                text="{ddtext>/PRTPREV}"
                                press="onPrintPreview"
                                tooltip="{ddtext>/PRTPREV}"
                                visible="true" />
                            <Button id="btnExport"
                                text="{ddtext>/EXPORTTOEXCEL}"
                                tooltip="{ddtext>/EXPORTTOEXCEL}"
                                press="onExport('poRel')"
                                visible="true" />
                            <Button id="btnRefresh"
                                icon="sap-icon://refresh"
                                press="onRefresh"
                                visible="true"/>
                        </content>
                        
                    </OverflowToolbar>

                    <ScrollContainer
                        id="scPORel"
                        height="100%"
                        width="100%"
                        vertical="true"
                        horizontal="true"
                    >
                        <Table id="poRelTab"
                            class="tablePadding"
                            items="{poRel>/results}"
                            fixedLayout="true"
                            mode="MultiSelect"
                            sticky="ColumnHeaders,HeaderToolbar"
                            >
                            <headerToolbar>
                                
                            </headerToolbar>
                            <columns>
                            </columns>
                            <items>
                                <ColumnListItem id="cliPORel" type="Active">
                                </ColumnListItem>
                            </items>
                        </Table>
                        <layoutData>
                            <FlexItemData growFactor="1" baseSize="0%"/>
                        </layoutData>
                    </ScrollContainer>
                
                </VBox>
            </VBox>

        </content>
    </Page>

</mvc:View>
